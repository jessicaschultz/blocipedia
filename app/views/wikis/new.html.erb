<div class="content">
  <section class="new-wiki">
    <div class="new-wiki-title-block">
      <h1 class="new-wiki-title animate fadeInRight">New Wiki</h1>
      <p class="lead"> Do you want to make this post Private?
        <br>
        <a href="#" class="btn-sm">Private Mode</a>
      </p>
    </div>

    <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
    <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
    <% end %>

    <div class="row">
      <div class="col-md-8">
        <%= form_for @wiki do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter Wiki title" %>
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Wiki body" %>
        <div class="form-group">
          <br>
          <%= f.submit "Save", class: 'btn-sm' %>
        </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
