<div id="content">
  <section class="wikis" id="wikis">
    <div class="container">
      <div class="col-sm-12 heading-block-view wiki-show-view-heading">
        <div class="col-md-8">
          <!-- <h1 class="animate fadeInRight">Create</h1> -->
        </div>
        <div class="col-md-4">
          <%= link_to "Back to Wikis", wikis_path, class: 'btn-flat' %>
        </div>
      </div>
      <!-- <hr class="featurette-divider"> -->

      <div class="row">
        <div class="col-md-8 wiki-list">
          <div class="media">
            <div class="flash-container">
              <% if flash[:notice] %>
              <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= flash[:notice] %>
              </div>
              <% elsif flash[:alert] %>
              <div class="alert alert-warning">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= flash[:alert] %>
              </div>
              <% end %>
            </div>
            <h4><%= @wiki.title %></h4>
              <div class="media-body">
                <p class="lead"><%= @wiki.body%></p>
                <small>
                  submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %>
                </small>
              </div>
            </div>
        </div>

        <div class="col-md-4 wiki-btn-col">
          <div class="media">
            <div class="media-body">
            <!-- need to fix to check if current_user is author of wiki. if so show the following: -->
            <% if current_user %>
              <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn-sm'%>
              <%= link_to "Delete", @wiki, method: :delete, class: 'btn-sm', data: { confirm: 'Are you sure you want to delete this wiki?' }%>
            <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>
</div>
